@model Cartproduct
@{
	ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="viewport" content="width=device-width"/>
	<title>ECommerce - Delete</title>
	<link rel ="stylesheet" href="~/css/delete.css">
	<!--Linking to CDN for the Remove Icon (Trashcan Icon)-->
	<link rel = "stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
</head>
<body>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
	<hr/>
	<img src=@Url.Content(Model.Product.ProductImage) alt="Product Image" width="25%" height="25%"/>
	<dl class="row">
		<dt class="col-sm-2">
			Product Name:
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Product.ProductName)
		</dd>
		<dt class="col-sm-2">
			Price:
		</dt>
		<dd class="col-sm-10">
			$@Html.DisplayFor(model => model.Product.ProductPrice)
		</dd>
		<dt class="col-sm-2">
			Quantity:
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Quantity)
		</dd>
	</dl>
	<hr/>
	<div class="bottom-actions">
		<form asp-action="Delete">
			<input type="hidden" asp-for="CartProductId" />
			<a class="delete-btn" name="delete-btn" type="submit" value="Delete">
				<i class="fa-solid fa-trash"></i>
				<span class="deleteSpan">Delete</span>
			</a> |
			<a asp-action="Cart">Back to Cart</a>
		</form>
	</div>
</div>
</body>
</html>